<%= form_with model: user_comment, url: "/beers/#{@beer_id}/users_comments" do |f| %>
 <div>
    <label>Current User ID:</label>
    <span><%= current_user.id %></span>
  </div>
 <div>
    <label>Beer ID:</label>
    <span><%= @beer_id %></span>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
  </div>
     

  <div>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
