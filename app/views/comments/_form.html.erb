<div class="comments-form">
<%= form_with model: comment, url: '/comments' do |f| %>
 <div>
    <label>Current User ID:</label>
    <span><%= current_user.id %></span>
  </div>
  <div>
    <%= f.label :beer_id %>
    <%= f.select :beer_id, options_for_select(Beer.pluck(:id), { prompt: 'Select a Beer' })%>
  </div>
  <div class="description-field">
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>
  </div>
  <div>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

</div>